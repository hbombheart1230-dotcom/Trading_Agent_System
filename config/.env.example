# =========================
# Kiwoom Agentic System Env
# =========================

# 서버 선택
KIWOOM_MODE=mock   # mock | real

# 실행 허용
EXECUTION_ENABLED=true

# 승인 정책
APPROVAL_MODE=auto   # manual | auto

# Base URLs
KIWOOM_BASE_URL_MOCK=https://mockapi.kiwoom.com
KIWOOM_BASE_URL_REAL=https://api.kiwoom.com

# App credentials (set your own)
KIWOOM_APP_KEY=
KIWOOM_APP_SECRET=
KIWOOM_ACCOUNT_NO=

# Token cache
KIWOOM_TOKEN_CACHE_PATH=./data/token_cache.json
KIWOOM_TOKEN_REFRESH_MARGIN_SEC=300

# Registry locations
KIWOOM_REGISTRY_TAGGED_JSONL=./data/specs/kiwoom_api_list_tagged.jsonl
KIWOOM_REGISTRY_APIS_JSONL=./data/specs/kiwoom_apis.jsonl
KIWOOM_API_CATALOG_PATH=./data/specs/api_catalog.jsonl

# Storage
STATE_STORE_PATH=./data/state.json
EVENT_LOG_PATH=./data/logs/events.jsonl
REPORT_DIR=./reports

# Schedules
SCAN_INTERVAL_SEC=300
MONITOR_INTERVAL_SEC=15
REPORT_INTERVAL_SEC=600

# HTTP
KIWOOM_HTTP_TIMEOUT_SEC=10
KIWOOM_RETRY_MAX=2
KIWOOM_PAGINATION_MAX_CALLS=10

# Risk guardrails (Supervisor enforces)
RISK_DAILY_LOSS_LIMIT=0.02
RISK_PER_TRADE_LOSS_LIMIT=0.005
RISK_MAX_POSITIONS=1
RISK_ORDER_COOLDOWN_SEC=60

# Order defaults
ORDER_DEFAULT_TYPE=limit
ORDER_DEFAULT_TIF=IOC

# (Optional) LLM providers — fill later
AI_SUPERVISOR_PROVIDER=
AI_STRATEGIST_PROVIDER=
AI_SCANNER_PROVIDER=
AI_REPORTER_PROVIDER=
